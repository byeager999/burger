<div class="container">
  <div class="jumbotron">
    <h1 class="display-4">Burger Barn!</h1>
    <p class="lead">Make the Burgers and Eat the Burgers!</p>
    <form>
      <div class="form-group">
        <label for="ca">Enter the Burger of Your Choice Below:</label>

        <div class="form-group">
          <label for="ca">Type of Burger:</label>
          <input type="text" id="ca" name="type">
        </div>

    </form>
    <button type="submit">Add Burger!</button>
    </form>
  </div>


</div>
<div class="row">
  <div class="col-sm-6">
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title">Burger Menu</h5>
        <li>
          {{name}}

          <button class="eat-burger" data-id="{{this.id}}">Devour!</button>
        </li>
        <ul>
          {{#each burger}}
          {{#if devoured}}
          {{> burgers/burger-block devoured=false}}
          {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title">86 List</h5>
        <ul>
          {{#each burger}}
          {{#unless devoured}}
          {{> burgers/burger-block devoured=true}}
          {{/unless}}
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>