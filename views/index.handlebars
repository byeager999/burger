<div class="container">
  <div class="jumbotron">
    <h1 class="display-4">Burger Barn!</h1>
    <p class="lead">Make the Burgers and Eat the Burgers!</p>
    <form class="create-form">
      <div class="form-group">
        <label for="ca">Enter the Burger of Your Choice Below:</label>

        <div class="form-group">
          <label for="newBurger">Type of Burger:</label>
          <input type="text" id="newBurger" name="burger">
        </div>
    <button type="submit" id="addBurger">Add Burger!</button>
    </form>
  </div>


</div>
<div class="row">
  <div class="col-sm-6">
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title">Burger Menu</h5>

        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            {{this.name}}
            <button class="eatBurger" id="eatBurger" data-id="{{this.id}}">86!</button>
            <hr>
            {{/unless}}
            {{/each}}
        </ul>

      </div>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title">86 List</h5>

        <ul>
          
            {{#each burgers}}
            {{#if devoured}}
            {{this.name}}
            <button class="restock" id="restock" data-id="{{this.id}}">Restock!</button>
            <button class="delete-burger" id="delete-burger" data-id="{{this.id}}">Remove from Menu!</button>

            <hr>
            {{/if}}
            {{/each}}
          
        </ul>

      </div>
    </div>
  </div>
</div>